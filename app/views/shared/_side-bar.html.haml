.side-bar
  .side-bar__user-name
    .side-bar__user-name__contents
      %p.side-bar__user-name__contents__name
        = current_user.name
      %ul.side-bar__user-name__contents__icon
        %li.side-bar__user-name__contents__icon__new-groups
        = link_to new_group_path, class: "contents__btn" do
          = icon('fas', 'pen-square')
        %li.side-bar__user-name__contents__icon__edit-user
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'contents__btn')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .groups
      = link_to group_messages_path(group), class: "group-list-text" do
        %p.side-bar__group-list__contents__name
          = group.name
        %p.side-bar__group-list__contents__message
          = group.show_last_message